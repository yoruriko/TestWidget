<?xml version="1.0" encoding="utf-8"?>

<com.gospelware.testwidget.Widget.SlidingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slidingView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_edit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/genderBlue"
            android:drawableTop="@drawable/edit"
            android:paddingTop="20dp"
            android:text="EDIT"
            android:textColor="@color/textColorWhite" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:gravity="center"
            android:text="test"
            android:textColor="@color/textColorWhite" />

        <Button
            android:id="@+id/button_delete"

            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/genderRed"
            android:drawableTop="@drawable/delete"
            android:paddingTop="20dp"
            android:text="DELETE"
            android:textColor="@color/textColorWhite" />


    </LinearLayout>

</com.gospelware.testwidget.Widget.SlidingView>